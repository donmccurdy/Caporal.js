{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "paths": { "@donmccurdy/caporal": ["./"] },
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true
  }
}
